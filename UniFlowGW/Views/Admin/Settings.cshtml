@model SettingsViewModel
@{
    ViewData["Title"] = "Settings";
    Layout = "_LayoutAdmin";
}

<h2>设置</h2>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">uniFLOW</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="UniflowServiceURL"></label>
                <input asp-for="UniflowServiceURL" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="UniflowServiceEncryptKey"></label>
                <input asp-for="UniflowServiceEncryptKey" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="UniflowServiceTaskTargetPath"></label>
                <input asp-for="UniflowServiceTaskTargetPath" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="UniflowConnection"></label>
                <input asp-for="UniflowConnection" class="form-control" placeholder="" />
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">微信</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="WeChatWxAppId"></label>
                <input asp-for="WeChatWxAppId" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="WeChatWxSecret"></label>
                <input asp-for="WeChatWxSecret" class="form-control" placeholder="" />
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">企业微信</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="WxWorkAppId"></label>
                <input asp-for="WxWorkAppId" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="WxWorkSecret"></label>
                <input asp-for="WxWorkSecret" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="WxWorkAgentId"></label>
                <input asp-for="WxWorkAgentId" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="WxWorkIOTPrinterSN"></label>
                <input asp-for="WxWorkIOTPrinterSN" class="form-control" placeholder="" />
            </div>
            <div class="form-group">
                <label asp-for="WxWorkIOTSecret"></label>
                <input asp-for="WxWorkIOTSecret" class="form-control" placeholder="" />
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">系统</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label asp-for="TempFileFolder"></label>
                <input asp-for="TempFileFolder" class="form-control" placeholder="默认为系统临时文件目录 TEMP" />
            </div>
        </div>
    </div>

    <div class="">
        <button type="submit" class="btn btn-primary btn-lg btn-block">保存</button>
    </div>
</form>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}