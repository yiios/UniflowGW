<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">运行状态</h3>
    </div>
    <div class="panel-body">
            <div class="form-group">
                <label for="exampleInputEmail1">运行时间</label>
                <input type="text" readonly class="readonly form-control" id="exampleInputEmail1" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">连接打印机数量/已授权数量</label>
                <input type="text" readonly class="readonly form-control" id="exampleInputEmail1" placeholder="">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">已绑定用户数量</label>
                <input type="text" readonly class="readonly form-control" id="exampleInputEmail1" placeholder="" value="@ctx.BindUsers.Count()">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">打印次数</label>
                <input type="text" readonly class="readonly form-control" id="exampleInputEmail1" placeholder="" value="@ctx.PrintTasks.Count()">
            </div>
    </div>
</div>

